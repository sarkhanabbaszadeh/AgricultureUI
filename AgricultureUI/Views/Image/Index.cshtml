@using EntityLayer.Entities
@model List<Image>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Şəkil Listi</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                        <th>#</th>
                        <th>Başlıq</th>
                        <th>Əməliyyatlar</th>
                        </tr>
                    </thead>
                    <tbody>
                         @foreach(var item in Model)
                        {
                            <tr>
                                <td class="py-1"><img src="@item.ImageUrl" alt="Image" /></td>
                                <td>@item.Title</td>
                                <td><a href="/Image/DeleteImage/@item.ImageID" class="btn btn-danger">Sil</a> <a href="/Image/EditImage/@item.ImageID" class="btn btn-success">Dəyişdir</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Image/AddImage/" class="btn btn-info">Yeni Şəkil Girişi</a>
            </div>
        </div>
    </div>
</div>


