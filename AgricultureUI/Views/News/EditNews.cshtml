@model EntityLayer.Entities.News
@{
    ViewData["Title"] = "EditNews";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Məlumat Dəyişdirmə səhifəsi</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.NewsID)
                <div class="form-group">
                    <label>Başlıq</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" asp-for="Title" class="form-control" placeholder="Başlıq daxil edin.." />
                    <br />
                </div>
                 <div class="form-group">
                    <label>Açıqlama</label>
                    @*                    <span asp-validation-for="Description" class="text-danger"></span>*@
                    <input type="date" asp-for="Date" class="form-control" placeholder="Başlıq daxil edin.." />
                    <br />
                </div>
                <div class="form-group">
                    <label>Açıqlama</label>
                    @*                    <span asp-validation-for="Description" class="text-danger"></span>*@
                    <textarea cols="30" rows="5" class="form-control" asp-for="Description" placeholder="Açıklama daxil edin.."></textarea>
                    <br />
                </div>
                <button class="btn btn-info">Dəyişdir</button>
            </form>
        </div>
    </div>
</div>

