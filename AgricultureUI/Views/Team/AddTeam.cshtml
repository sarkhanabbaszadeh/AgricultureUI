@model EntityLayer.Entities.Team
@{
    ViewData["Title"] = "AddTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Əməkdaş Giriş səhifəsi</h4>
            <form method="post">
                <div class="form-group">
                    @Html.Label("Adı Soyadı")
                    <span asp-validation-for="PersonName" class="text-danger"></span>
                    <input type="text" asp-for="PersonName" class="form-control" />
                    <br />
                </div>
                <div class="form-group">
                    @Html.Label("Vəzifəsi")
                    <span asp-validation-for="Title" class="text-danger"></span>

                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                </div>
                <div class="form-group">
                    @Html.Label("Şəkilin ünvanı")
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>

                    <input type="text" asp-for="ImageUrl" class="form-control" />
                    <br />
                </div>
                                <div class="form-group">
                    @Html.Label("Facebook")
                    <span asp-validation-for="FacebookUrl" class="text-danger"></span>

                    <input type="text" asp-for="FacebookUrl" class="form-control" />
                    <br />
                </div>
                                <div class="form-group">
                    @Html.Label("İnstagram")
                    <span asp-validation-for="InstagramUrl" class="text-danger"></span>

                    <input type="text" asp-for="InstagramUrl" class="form-control" />
                    <br />
                </div>
                                <div class="form-group">
                    @Html.Label("Twitter")
                    <span asp-validation-for="TwitterUrl" class="text-danger"></span>

                    <input type="text" asp-for="TwitterUrl" class="form-control" />
                    <br />
                </div>
                <button class="btn btn-outline-info">Əlavə et</button>
            </form>
        </div>
    </div>
</div>

