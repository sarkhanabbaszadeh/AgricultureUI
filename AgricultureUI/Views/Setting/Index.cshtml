@model AgricultureUI.Models.UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Profil ayar səhifəsi</h4>
            <form class="form-sample" method="post">
                <div class="form-group">
                    <label>E-poçatanız</label>
                    <input type="text" class="form-control" asp-for="Mail" />
                </div>
                <div class="form-group">
                    <label>Telefon nömrəniz</label>
                    <input type="text" class="form-control" asp-for="Phone" />
                </div>
                <div class="form-group">
                    <label>Şifrə</label>
                    <input type="text" class="form-control" asp-for="Password" />
                </div>
                <div class="form-group">
                    <label>Şifrə təkrar</label>
                    <input type="text" class="form-control" asp-for="ConfirmPassword" />
                </div>
                <button class="btn btn-info">Dəyişdir</button>
            </form>
        </div>
    </div>
</div>

