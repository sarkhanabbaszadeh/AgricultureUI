@using EntityLayer.Entities
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Xidmət Listi</h4>
            <div class="table-responsive pt-3">
<table class="table table-bordered">
    <tr>
        <th hidden>#</th>
        <th>Basliq</th>
        <th>Əməliyyatlar</th>
    </tr>
                    @foreach (var item in Model)
                    {
            <tr>
                <td hidden>@item.ServiceID</td>
                <td>@item.Title</td>
                <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Sil</a> <a href="/Service/EditService/@item.ServiceID" class="btn btn-success">Dəyişdir</a></td>
            </tr>
                    }
</table>
</div>
<br />
<a href="/Service/AddService" class="btn btn-info">Yeni Xidmət</a>
<br />
        </div>
    </div>
</div>
