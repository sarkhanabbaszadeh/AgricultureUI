@using EntityLayer.Entities
@model List<News>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Xidmət Listi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <tr>
                        <th hidden>#</th>
                        <th>Başlıq</th>
                        <th>Tarix</th>
                        <th>Əməliyyatlar</th>
                        <th>Aktivləşdir</th>
                        <th>Deaktivləşdir</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td hidden>@item.NewsID</td>
                            <td>@item.Title</td>
                            <td>@item.Date</td>
                            <td><a href="/News/DeleteNews/@item.NewsID" class="btn btn-danger">Sil</a> <a href="/News/EditNews/@item.NewsID" class="btn btn-success">Dəyişdir</a></td>
                            <td><a href="/News/DeleteNews/@item.NewsID" class="btn btn-info">Aktiv</a></td>
                            <td><a href="/News/DeleteNews/@item.NewsID" class="btn btn-danger">Deaktiv</a></td>

                        </tr>
                    }
                </table>
            </div>
            <br />
            <a href="/News/AddNews" class="btn btn-info">Yeni Məlumat</a>
            <br />
        </div>
    </div>
</div>

