@using EntityLayer.Entities
@model List<Admin>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Admin Listi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <tr>
                        <th hidden>#</th>
                        <th>Username</th>
                        <th>Əməliyyatlar</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td hidden>@item.AdminID</td>
                            <td>@item.Username</td>
                            <td><a href="/Admin/DeleteAdmin/@item.AdminID" class="btn btn-danger">Sil</a> <a href="/News/EditAdmin/@item.AdminID" class="btn btn-success">Dəyişdir</a></td>
                        </tr>
                    }
                </table>
            </div>
            <br />
            <a href="/Admin/AddAdmin" class="btn btn-info">Yeni Admin</a>
            <br />
        </div>
    </div>
</div>
