@using EntityLayer.Entities
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Xidmət Listi</h1>
<div class="table-responsive pt-3">
<table class="table table-bordered">
    <tr>
        <th hidden>#</th>
        <th>Basliq</th>
        <th>Əməliyyatlar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td hidden>@item.ServiceID</td>
            <td>@item.Title</td>
            <td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Sil</a> <a href="/Service/EditService/@item.ServiceID" class="btn btn-success">Dəyişdir</a></td>
        </tr>
    }
</table>
</div>
<br />
<a href="/Service/AddService" class="btn btn-outline-info">Yeni Xidmət</a>