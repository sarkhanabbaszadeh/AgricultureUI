@model EntityLayer.Entities.Image
@{
    ViewData["Title"] = "AddImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Şəkil Giriş səhifəsi</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label>Başlıq</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <br />
                </div>
                <div class="form-group">
                    @Html.Label("Şəkil ünvanı")
                    <input type="text" asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <br />
                </div>
                <div class="form-group">
                    @Html.Label("Açıqlama")
                    <input type="text" asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <br />
                </div>
                <button class="btn btn-info">Əlavə et</button>
            </form>
        </div>
    </div>
</div>

