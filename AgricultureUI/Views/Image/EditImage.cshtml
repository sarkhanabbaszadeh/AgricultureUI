@model EntityLayer.Entities.Image
@{
    ViewData["Title"] = "EditImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Şəkil yeniləmə səhifəsi</h4>
            <form class="form-sample" method="post">
                <div class="form-group">
                    <input type="hidden" asp-for="ImageID" />
                    <label>Başlıq</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Title" />
                </div>
                <div class="form-group">
                    <label>Şəkil ünvanı</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="ImageUrl" />
                </div>
                <div class="form-group">
                    <label>Açıqlama</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Description" />
                </div>
                <button class="btn btn-info">Dəyişdir</button>
            </form>
        </div>
    </div>
</div>

