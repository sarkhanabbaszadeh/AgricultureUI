@model EntityLayer.Entities.Team
@{
    ViewData["Title"] = "EditTeam";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Əməkdaş məlumat yeniləmə səhifəsi</h4>
            <form class="form-sample" method="post">
                <div class="form-group">
                    @Html.HiddenFor(x=>x.TeamID)
                    <label>Adı Soyadı</label>
                    <span asp-validation-for="PersonName" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="PersonName"/>
                </div>
                <div class="form-group">
                    <label>Vəzifəsi</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Title" />
                </div>
                 <div class="form-group">
                    <label>Şəkilin ünvanı</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="ImageUrl" />
                </div>
                 <div class="form-group">
                    <label>Facebook</label>
                    <span asp-validation-for="FacebookUrl" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="FacebookUrl" />
                </div>
                 <div class="form-group">
                    <label>Instagram</label>
                    <span asp-validation-for="InstagramUrl" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="InstagramUrl" />
                </div>
                 <div class="form-group">
                    <label>Twitter</label>
                    <span asp-validation-for="TwitterUrl" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="TwitterUrl" />
                </div>
                <div class="form-group">
                    <label>Web sayt</label>
                    <span asp-validation-for="WepSiteUrl" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="WepSiteUrl" />
                </div>
                <button class="btn btn-info">Deyis</button>
            </form>
        </div>
    </div>
</div>

